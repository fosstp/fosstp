{% extends 'base.jinja2' %}

{% block content %}
<!-- facebook -->
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.7&appId=533352440192510";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<!-- facebook -->

<!-- container -->
<div class="container-fluid">
  <div class="row">
    <img class="img-responsive center-block" style="margin: -22px auto -22px auto;" src="{{ 'fosstp:static/banner.png'|static_path }}">
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-9 col-sm-push-3 col-lg-9 col-lg-push-2">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">最新消息</h3>
        </div>
        <div class="panel-body">
          <div class="list-group">
            {% for each_news in news_list %}
              <a href="{{ request.route_path('news_show', id=each_news.id) }}" class="list-group-item">
                {{ each_news.title }}
                <span class="pull-right">{{ each_news.user.name }} {{ each_news.create_datetime.strftime('%Y-%m-%d %H:%M:%S') }}</span>
              </a>
            {% endfor %}
          </div>
          <a href="{{ request.route_path('news') }}" class="btn btn-info btn-xs pull-right"> 顯示更多...</a>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">最新討論</h3>
        </div>
        <div class="panel-body">
          <div class="list-group">
            {% for each_forum_topic in forum_topic_list %}
              <a href="{{ request.route_path('forum_topic', id=each_forum_topic.id) }}" class="list-group-item">
                {{ each_forum_topic.title }}
                <span class="pull-right">{{ each_forum_topic.user.name }} {{ each_forum_topic.create_datetime.strftime('%Y-%m-%d %H:%M:%S') }}</span>
              </a>
            {% endfor %}
          </div>
          <a href="{{ request.route_path('forum') }}" class="btn btn-info btn-xs pull-right"> 顯示更多...</a>
        </div>
      </div>
    </div>
    <div class="col-sm-3 col-sm-pull-9 col-lg-2 col-lg-pull-9">
      <div class="row">
        <div class="col-xs-12">
          <a class="twitter-timeline" data-height="500" href="https://twitter.com/fosstp">Tweets by fosstp</a>
          <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div>
        <div class="col-xs-12">
          <div class="fb-page" data-href="https://www.facebook.com/fosstp/" data-tabs="timeline" data-small-header="true" data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="true"><blockquote cite="https://www.facebook.com/fosstp/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/fosstp/">臺北市自由軟體推動小組</a></blockquote></div>
        </div>
      </div>
    </div>
    <div class="clearfix visible-sm-block visible-md-block"></div>
    <div class="col-sm-3 col-lg-1">
      友站連結
    </div>
  </div><!-- row -->
</div><!-- container -->
{% endblock content %}
