{% extends 'base.jinja2' %}

{% block about_stats %} class="active"{% endblock %}

{% block content %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-offset-1 col-sm-10">
        {% if about %}
          {{ about.content|safe }}
        {% endif %}
      </div>
    </div>
    {% if request.group == 'admin' %}
      <div class="row">
        <div class="col-sm-12 text-center">
          <a class="btn btn-primary" href="{{ request.route_path('about_edit') }}">編輯</a>
        </div>
      </div>
    {% endif %}
  </div><!-- container -->
{% endblock content %}
