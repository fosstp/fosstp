{% extends 'base.jinja2' %}

{% block about_stats %} class="active"{% endblock %}

{% block content %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-offset-1 col-sm-10">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">關於本站</h3>
          </div>
          <div class="panel-body">
            {% if about %}
              {{ about.content|safe }}
            {% endif %}
          </div>
        </div>
      </div>
      {% if request.group == 'admin' %}
        <div class="col-sm-12 text-center">
          <a class="btn btn-primary" href="{{ request.route_path('about_edit') }}">編輯</a>
        </div>
      {% endif %}
    </div>
  </div><!-- container -->
{% endblock content %}
