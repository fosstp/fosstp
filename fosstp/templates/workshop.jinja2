{% extends 'base.jinja2' %}

{% block workshop_stats %} class="active"{% endblock %}

{% block content %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-offset-1 col-sm-10">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">研習資訊</h3>
          </div>
          <div class="panel-body">
            {% if workshop %}
              {{ workshop.link|safe }}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    {% if request.group == 'admin' %}
      <div class="row">
        <div class="col-sm-12 text-center">
          <a class="btn btn-primary" href="{{ request.route_path('workshop_edit') }}">編輯</a>
        </div>
      </div>
    {% endif %}
  </div><!-- container -->
{% endblock content %}
